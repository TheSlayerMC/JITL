{
  "multipart": [
     {
        "apply": {
            "model": "jitl:block/sizzling_post_post"
        }
     },
     {
        "apply": {
            "model": "jitl:block/sizzling_post_side",
            "uvlock": true
        },
        "when": {
            "north": "true"
        }
     },
     {
        "apply": {
            "model": "jitl:block/sizzling_post_side",
            "uvlock": true,
            "y": 90
        },
        "when": {
            "east": "true"
        }
     },
     {
        "apply": {
            "model": "jitl:block/sizzling_post_side",
            "uvlock": true,
            "y": 180
        },
        "when": {
            "south": "true"
        }
     },
     {
        "apply": {
            "model": "jitl:block/sizzling_post_side",
            "uvlock": true,
            "y": 270
        },
        "when": {
            "west": "true"
        }
     }
  ]
}
